#!/bin/bash
echo "Running local CI checks..."

# Форматирование кода
./mvnw spotless:apply

# Проверка стиля
./mvnw checkstyle:check
if [ $? -ne 0 ]; then
    echo "❌ Checkstyle failed!"
    exit 1
fi

# Запуск тестов
./mvnw test
if [ $? -ne 0 ]; then
    echo "❌ Tests failed!"
    exit 1
fi

echo "✅ All checks passed!"
