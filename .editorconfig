root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.java]
indent_size = 4
continuation_indent_size = 8

# Поддержка новых синтаксических конструкций Java 21
java_imports_layout = "###,java,javax,org,com"

[*.{xml,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{gradle,kts}]
indent_size = 4